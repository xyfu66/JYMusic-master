<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".components.metronomeAndTuner.metronome.IndexFragment">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/metroBg"
            android:layout_width="380dp"
            android:layout_height="380dp"
            android:contentDescription="@string/metroBg"
            android:src="@drawable/play_button_background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.3" />

        <TextView
            android:id="@+id/spendNo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_no"
            android:textColor="#651FFF"
            android:textSize="96sp"
            app:layout_constraintBottom_toBottomOf="@+id/metroBg"
            app:layout_constraintEnd_toEndOf="@+id/metroBg"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="@+id/metroBg"
            app:layout_constraintTop_toTopOf="@+id/metroBg"
            app:layout_constraintVertical_bias="0.5" />

        <TextView
            android:id="@+id/speedText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/speed_text"
            android:textColor="@color/white"
            android:textSize="34sp"
            app:layout_constraintBottom_toBottomOf="@+id/metroBg"
            app:layout_constraintEnd_toEndOf="@+id/metroBg"
            app:layout_constraintStart_toStartOf="@+id/metroBg"
            app:layout_constraintTop_toBottomOf="@+id/spendNo" />

        <ProgressBar
            android:id="@+id/progressBar"
            style="?android:attr/progressBarStyle"
            android:layout_width="380dp"
            android:layout_height="380dp"
            app:layout_constraintBottom_toBottomOf="@+id/metroBg"
            app:layout_constraintEnd_toEndOf="@+id/metroBg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@+id/metroBg"
            app:layout_constraintTop_toTopOf="@+id/metroBg"
            app:layout_constraintVertical_bias="0.283" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>